# NPM Configuration

# Automatically save installed packages to package.json
save-exact=false

# Disable package-lock.json updates during installs
# package-lock=false

# Set the default registry (optional)
# registry=https://registry.npmjs.org/

# Logging level
loglevel=warn

# Prefer offline when possible
# prefer-offline=true

# Engine strict mode
engine-strict=true

# Legacy peer deps (uncomment if needed for compatibility)
# legacy-peer-deps=true
